@model ProyectoSBooks.Web.Models.Proveedor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="container col-md-6 card shadow my-5">
    <h5 class="pt-3"><i class="bi bi-file-plus"></i> Actualizar Proveedor</h5>
    <hr>
    <form asp-action="Edit" class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-md-2 mb-2">
            <label asp-for="IdProveedor" class="col-form-label">Id Proveedor: </label>
            <input asp-for="IdProveedor" class="form-control" readonly style="background: #e9ecef !important" />
            <span asp-validation-for="IdProveedor" class="text-danger"></span>
        </div>
        <div class="form-group col-md-5 mb-2">
            <label asp-for="NombreCia" class="col-form-label">Razon Social: </label>
            <input asp-for="NombreCia" class="form-control" required />
            <span asp-validation-for="NombreCia" class="text-danger"></span>
        </div>
        <div class="form-group col-md-5 mb-2">
            <label asp-for="NombreContacto" class="col-form-label">Contacto: </label>
            <input asp-for="NombreContacto" class="form-control" required />
            <span asp-validation-for="NombreContacto" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4 mb-2">
            <label asp-for="CargoContacto" class="col-form-label">Cargo: </label>
            <input asp-for="CargoContacto" class="form-control" required />
            <span asp-validation-for="CargoContacto" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4 mb-2">
            <label asp-for="Direccion" class="col-form-label">Direccion: </label>
            <input asp-for="Direccion" class="form-control" required />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>
        <div class="form-group" hidden>
            <label asp-for="NombrePais" class="control-label"></label>
            <input asp-for="NombrePais" class="form-control" />
            <span asp-validation-for="NombrePais" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4 mb-2">
            <label asp-for="idpais" class="col-form-label">Pais: </label>
            <select asp-for="idpais" asp-items="@ViewBag.paises" class="form-select" required>
                <option value="">Seleccione un pais</option>
            </select>
            <span asp-validation-for="idpais" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 mb-2">
            <label asp-for="Telefono" class="col-form-label">Telefono: </label>
            <input asp-for="Telefono" class="form-control" type="number" required />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 mb-4">
            <label asp-for="Fax" class="col-form-label">Correo: </label>
            <input asp-for="Fax" class="form-control" required />
            <span asp-validation-for="Fax" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 d-flex justify-content-center mb-4">
            <input type="submit" value="Guardar" class="btn btn-primary px-5 me-3 fw-bold" />
            <a asp-action="Index" class="btn btn-success px-4 fw-bold">Regresar</a>
        </div>
    </form>
</div>



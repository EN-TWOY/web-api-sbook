@model IEnumerable<ProyectoSBooks.Web.Models.Proveedor>

@{
    ViewData["Title"] = "Proveedor";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<style>
    .alert_floating {
        position: fixed;
        top: 80px;
        right: 25px;
        width: auto;
        z-index: 9999;
    }
</style>

<div class="container mb-5">
    <h4 class="mt-1"><i class="bi bi-card-text"></i> Mantenimiento Proveedor</h4>
    <hr />
    <a asp-action="Create" class="btn btn-success mb-3"><i class="bi bi-plus-square"></i>  Agregar Nuevo/a</a>
    <table id="datatable-spanish" class="table table-striped border table-bordered py-2">
        <thead class="table-primary">
            <tr>
                <th>Id</th>
                <th>R. Social</th>
                <th>Contacto</th>
                <th>Cargo</th>
                <th>Direccion</th>
                <th>Pais</th>
                <th>Telefono</th>
                <th>Correo</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IdProveedor)</td>
                        <td>@Html.DisplayFor(modelItem => item.NombreCia)</td>
                        <td>@Html.DisplayFor(modelItem => item.NombreContacto)</td>
                        <td>@Html.DisplayFor(modelItem => item.CargoContacto)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.NombrePais)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fax)</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", new { IdProveedor = item.IdProveedor })" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="@Url.Action("Delete", new { IdProveedor = item.IdProveedor })" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de eliminar este proveedor?');">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>

<!-- Mensaje de alerta -->
@if (ViewBag.mensaje != null)
{
    <div class="alert alert-success alert-dismissible fade show alert_floating" role="alert">
        @ViewBag.mensaje
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

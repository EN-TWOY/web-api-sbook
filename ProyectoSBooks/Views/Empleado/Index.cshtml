@model IEnumerable<ProyectoSBooks.Web.Models.Empleado>

@{
    ViewData["Title"] = "Empleado";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<style>
    .alert_floating {
        position: fixed;
        top: 80px;
        right: 25px;
        width: auto;
        z-index: 9999;
    }
</style>

<div class="container mb-5">
    <h4 class="mt-1"><i class="bi bi-card-text"></i> Mantenimiento Empleado</h4>
    <hr />
    <a asp-action="Create" class="btn btn-success mb-3"><i class="bi bi-plus-square"></i>  Agregar Nuevo/a</a>

    <table id="datatable-spanish" class="table table-striped border table-bordered py-2">
        <thead class="table-primary">
        <tr>
            <th>Id</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>F. Nac</th>
            <th>Direccion</th>
            <th>Distrito</th>
            <th>Telefono</th>
            <th>Cargo</th>
            <th>F. Contrato</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IdEmpleado)</td>
                    <td>@Html.DisplayFor(modelItem => item.ApeEmpleado)</td>
                    <td>@Html.DisplayFor(modelItem => item.NomEmpleado)</td>
                    <td>@Html.DisplayFor(modelItem => item.FecNac)</td>
                    <td>@Html.DisplayFor(modelItem => item.DirEmpleado)</td>
                    <td>@Html.DisplayFor(modelItem => item.idDistrito)</td>
                    <td>@Html.DisplayFor(modelItem => item.fonoEmpleado)</td>
                    <td>@Html.DisplayFor(modelItem => item.idCargo)</td>
                    <td>@Html.DisplayFor(modelItem => item.FecContrata)</td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", new { IdEmpleado = item.IdEmpleado })" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="@Url.Action("Delete", new { IdEmpleado = item.IdEmpleado })" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de eliminar este empleado?');">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
        }
        </tbody>
    </table>
</div>

<!-- Mensaje de alerta -->
@if (ViewBag.mensaje != null)
{
    <div class="alert alert-success alert-dismissible fade show alert_floating" role="alert">
        @ViewBag.mensaje
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
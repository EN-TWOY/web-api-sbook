@model ProyectoSBooks.Models.Categoria
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<style>
    .alert_floating {
        position: fixed;
        top: 80px;
        right: 25px;
        width: auto;
        z-index: 9999;
    }
</style>

<div class="container col-md-5 card shadow my-5">
    <h5 class="pt-3"><i class="bi bi-file-plus"></i> Actualizar Categoria</h5>
    <hr />
    <form asp-action="Edit" class="py-3 row px-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="IdCategoria" class="col-form-label">Id Categoria:</label>
            <input asp-for="IdCategoria" class="form-control" readonly style="background: #e9ecef !important" />
            <span asp-validation-for="IdCategoria" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NombreCategoria" class="col-form-label">Nombre de la  categoria: </label>
            <input asp-for="NombreCategoria" class="form-control" />
            <span asp-validation-for="NombreCategoria"  class="text-danger"></span>
        </div>
        <div class="form-group mb-5">
            <label asp-for="Descripcion" class="col-form-label">Descripcion:  </label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 d-flex justify-content-center">
            <input type="submit" value="Guardar" class="btn btn-primary px-5 me-3 fw-bold" />
            <a asp-action="listado" class="btn btn-success px-4  fw-bold">Regresar</a>
        </div>
    </form>
</div>

<!-- Mensaje de alerta -->
@if (ViewBag.mensaje != null)
{
    <div class="alert alert-success alert-dismissible fade show alert_floating"  role="alert">
        @ViewBag.mensaje
        <button type="button" class="btn-close" data-bs-dismiss="alert"  aria-label="Close"></button>
    </div>
}